<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title><%= current_page.data.title %></title>
    <%= stylesheet_link_tag "site" %>
    <%= javascript_include_tag "site" %>
    <%= favicon_tag "/images/favicon-32x32.png" %>
  </head>

  <!-- Eliminate alignment "jumps" by always showing the scrollbar -->
  <body class="overflow-y-scroll">
    <div class="mx-auto text-4xl font-bold text-center text-orange-500">Under Construction</div>

    <div class="p-8 mx-auto max-w-screen-md">
      <%= partial "navbar" %>
      <%= yield %>
    </div>
  </body>
</html>
