<div class="p-4 mx-auto md:container">
  <nav class="flex justify-between py-2 print:hidden">
    <div class="flex items-center">
      <a href="/sv/cv/"><img class="w-10" alt="Flag of Sweden" src="/images/flag-sv.svg" /></a>
      <a href="/en/cv/"><img class="w-10 ml-1" alt="Flag of Great Britain" src="/images/flag-en.svg" /></a>
    </div>

    <button class="p-2 font-bold text-gray-100 bg-green-500 rounded shadow-xs">Download as PDF</button>
  </nav>

  <header class="mt-4">
    <img class="float-right w-64 rounded-md" alt="Portrait" src="/images/portrait.jpg" />

    <h1 class="text-3xl"><%= t("cv.title") %></h1>
    <p><%= t("cv.tagline") %></p>
  </header>

  <main>
    <section>
      <article>
        <% t("cv.presentation.paragraphs").each do |paragraph| %>
          <p class="mt-2"><%= paragraph %></p>
        <% end %>

        <h2 class="mt-4 text-2xl"><%= t("cv.personal.title") %></h2>

        <% t("cv.personal.paragraphs").each do |paragraph| %>
          <p><%= paragraph %></p>
        <% end %>
      </article>
    </section>

    <section>
      <h2 class="mt-4 -mb-4 text-2xl"><%= t("cv.experience.title") %></h2>

      <% data.cv.experience.each do |experience_id, experience| %>
        <article>
          <h3 class="mt-4 text-xl"><%= experience.fetch(:start) %> - <%= experience.end || t("cv.experience.ongoing") %>: <%= experience.name %></h3>

          <p class="mt-2"><%= t("cv.experience.project") %>: <%= t(:project, scope: [:cv, :experience, experience_id]) %>
          <p class="mt-2"><%= t("cv.experience.role") %>: <%= t(:role, scope: [:cv, :experience, experience_id]) %>
          <p class="mt-2"><%= t("cv.experience.benefit") %>: <%= t(:benefit, scope: [:cv, :experience, experience_id]) %>
          <p class="mt-2"><%= t("cv.experience.tech") %>: <%= experience.tech.join(", ") %>
        </article>
      <% end %>
    </section>

    <section>
      <h2 class="mt-4 -mb-4 text-2xl"><%= t("cv.education.title") %></h2>

      <% data.cv.education.each do |education_id, education| %>
        <article>
          <h3 class="mt-4 text-xl"><%= education.fetch(:start) %> - <%= education.fetch(:end) %>: <%= t(:name, scope: [:cv, :education, education_id]) %></h3>

          <p class="mt-2"><%= t(:description, scope: [:cv, :education, education_id]) %>
          <p class="mt-2"><%= t("cv.experience.tech") %>: <%= education.tech.join(", ") %>
        </article>
      <% end %>
    </section>
  </main>
</div>
