<nav class="flex justify-between py-4 print:hidden">
  <div class="font-sans text-xl text-gray-800 space-x-4">
    <%= link_to t("index.link"), "index.html",
      :class => (current_page.path.include?("index.html") ? "font-bold cursor-default" : "underline focus:text-gray-600") %>
    <%= link_to t("about.link"), "about.html",
      :class => (current_page.path.include?("about.html") ? "font-bold cursor-default" : "underline focus:text-gray-600") %>
    <%= link_to t("cv.link"), "cv.html",
      :class => (current_page.path.include?("cv.html") ? "font-bold cursor-default" : "underline focus:text-gray-600") %>
  </div>

  <div>
    <% if I18n.locale == :en %>
      <% link_to switch_language(:sv) do %>
        <img class="w-10" alt="Flag of Sweden" src="/images/flag-sv.svg" />
      <% end %>
    <% else %>
      <% link_to switch_language(:en) do %>
        <img class="w-10" alt="Flag of Great Britain" src="/images/flag-en.svg" />
      <% end %>
    <% end %>
  </div>
</nav>
